{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "app.lovable.almans",
  "productName": "Almans",
  "directories": {
    "output": "electron-dist",
    "buildResources": "electron/resources"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/app-icon.jpg",
    "public/app-icon.svg"
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/app-icon.jpg",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "public/app-icon.jpg",
    "uninstallerIcon": "public/app-icon.jpg",
    "installerHeaderIcon": "public/app-icon.jpg",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Almans"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/app-icon.jpg",
    "category": "public.app-category.shopping",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "dmg": {
    "title": "${productName}",
    "icon": "public/app-icon.jpg"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "public/app-icon.jpg",
    "category": "Shopping",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  }
}
